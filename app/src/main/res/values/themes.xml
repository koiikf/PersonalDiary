    </style>

    <style name="myPopupMenuTextAppearanceLargeSpace" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/popup_text_color_space</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="myPopupMenuTextAppearanceSmallModern" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/popup_text_color_modern</item>
        <item name="android:textSize">16sp</item>
